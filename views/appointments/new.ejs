<% include ../partials/header %>
  <div class="container-fluid">
    <ul class="bg-image-new">
      <li><li>
    </ul>
    <div class="row">
      <div class="col-md-12">
        <% if (typeof errors != 'undefined'){ %>
          <% errors.forEach(function(error){ %>
          <div class="alert alert-danger">
            <%= error.msg %>
          </div>
        <% })}; %>
        <div class="form-design-new">
          <form action="/appointments" method="POST">
            <div class="title-new">
              <h1>Enter Appointment</h1>
            </div>

            <div class="row">
              <div class="col-md-12">
                <div class="new-info-one">
                  <label id="fname">First Name:</label>
                    <input type="text" name="fname" placeholder="Enter First Name" value="<%= fname %>">
                </div>
              </div>

              <div class="col-md-12 new-info-one">
                <label id="lname">Last Name:</label>
                  <input type="text" name="lname" placeholder="Enter Last Name" value="<%= lname %>">
              </div>
            </div>

            <div class="row">
              <div class="col-md-4">
                <div class="new-info-two">
                  <label id="phone">Phone:</label>
                    <input type="text" name="phone" placeholder="Enter Phone Number" value="<%= phone %>">
                </div>
              </div>
                <div class="col-md-3 new-info-three">
                  <label id="time">Time:</label>
                    <input type="time" name="appoint_time" value="<%= appoint_time %>">
                </div>
                <div class="col-md-5 new-info-four">
                    <label id="date">Set Date:</label>
                      <input type="date" name="appoint_day" value="<%= appoint_day %>">
                </div>
            </div>


            <div class="row">
              <div class="new-info-five">
                <div class="col-md-12">
                  <label id="doc-info">Doctor Info:</label>
                    <input type="text" name="doc_fname" placeholder="Enter Doctor First Name" value="<%= doc_fname %>">
                </div>
                <div class="col-md-12">
                  <input type="text" name="doc_lname" placeholder="Enter Doctor Last Name" value="<%= doc_lname %>">
                </div>
                <div class="col-md-12">
                  <textarea name="reason" rows="6" cols="50" placeholder="Reason for Appointment"><%= reason %></textarea>
                </div>
                <div class="col-md-12">
                  <button type="submit" name="Submit">Submit</button>
                </div>
              </div>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
  <% include ../partials/footer %>
